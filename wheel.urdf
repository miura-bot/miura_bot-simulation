<robot name="wheel_with_motor">

  <!-- Materials -->
  <material name="blue">
    <color rgba = "0 0 0.8 1"/>
  </material>

  <!-- Links -->
  <link name="wheel">
    <visual>
      <origin rpy="0.0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="wheel.stl" scale="1.00 1.00 1.00"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <origin rpy="0.0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="wheel.stl" scale="1.00 1.00 1.00"/>
      </geometry>
    </collision>
  </link>

  <link name="motor">
    <visual>
      <origin rpy="0.0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="motor.stl" scale="1.00 1.00 1.00"/>
      </geometry>
    </visual>
    <collision>
      <origin rpy="0.0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="motor.stl" scale="1.00 1.00 1.00"/>
      </geometry>
    </collision>
  </link>

  <!-- Joints -->
  <joint name="joint1" type="continuous">
    <parent link="wheel"/>
    <child link="motor"/>
    <origin rpy="0 0 0" xyz="0 0 0"/>
  </joint>

</robot>