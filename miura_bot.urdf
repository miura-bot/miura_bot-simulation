<robot name="miura_bot">
<material name="blue">
          <color rbga = "0 0 0.8 1"/>
</material>

<link name="base_link">
      <visual>
        <origin rpy="0.0 0 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="mori-design-2.stl" scale="0.01 0.01 0.01"/>
        </geometry>
      </visual>
      <collision>
        <origin rpy="0.0 0 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="mori-design-2.stl" scale="0.01 0.01 0.01"/> #will make a lower poly version of this later
        </geometry>
      </collision>
</link>

<link name="wheel1">
      <visual>
        <origin rpy="0.0 0 0" xyz="0.0129904 0.0075 0.0005"/>
        <geometry>
          <mesh filename="wheel.stl" scale="0.01 0.01 0.01"/>
        </geometry>
        <material name="blue"/>
      </visual>
      <collision>
        <origin rpy="0.0 0 0" xyz="0.0129904 0.0075 0.0005"/>
        <geometry>
          <mesh filename="wheel.stl" scale="0.01 0.01 0.01"/> #will make a lower poly version of this later
        </geometry>
      </collision>
</link>

<link name="wheel2">
      <visual>
        <origin rpy="0.0 0 0" xyz="0 0.0150 0.0005"/>
        <geometry>
          <mesh filename="wheel.stl" scale="0.01 0.01 0.01"/>
        </geometry>
        <material name="blue"/>
      </visual>
      <collision>
        <origin rpy="0.0 0 0" xyz="0 0.0150 0.0005"/>
        <geometry>
          <mesh filename="wheel.stl" scale="0.01 0.01 0.01"/> #will make a lower poly version of this later
        </geometry>
      </collision>
</link>

<joint name="joint1" type="fixed">
        <parent link="base_link"/>
        <child link="wheel1"/>
        <axis xyz="0 1 0"/>
        <limit effort="1000.0" lower="-1.571" upper="1.571" velocity="0.5"/> #uhhhhhh idk what the effort and velocity values are for our robot but i think +/- 90 degrees is
                                                                             #right for the upper and lower limits right?
        <origin rpy="0 0 0" xyz="1.29904 0.75 0.05"/>      #129.904 ~= 75*3^(1/2), 5 is half the robot thickness
</joint>
   
<joint name="joint2" type="fixed">
        <parent link="base_link"/>
        <child link="wheel2"/>
        <axis xyz="0.866 0.5 0"/>
        <limit effort="1000.0" lower="-1.571" upper="1.571" velocity="0.5"/> #uhhhhhh idk what the effort and velocity values are for our robot but i think +/- 90 degrees is
                                                                             #right for the upper and lower limits right?
        <origin rpy="0 0 0" xyz="0.00 15.0 0.05"/>      #5 is half the robot thickness 
</joint>
</robot>